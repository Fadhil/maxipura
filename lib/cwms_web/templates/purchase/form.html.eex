<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group inline">
        <div class="col-xs-2">
          <%= label f, :name, class: "control-label" %>
        </div>
        <div class="col-xs-10">
          <%= text_input :requester, :name, class: "form-control", disabled: true, value: @conn.assigns.current_user.name %>
          <%= hidden_input f, :requester_id, value: @conn.assigns.current_user.id %>
          <%= error_tag f, :requester %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= label f, :person_in_charge, class: "control-label" %>
        <%= select f, :pic_id, inventory_managers_list, class: "form-control" %>
        <%= error_tag f, :person_in_charge %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group inline">
        <div class="col-xs-2">
          <%= label f, :address, class: "control-label" %>
        </div>
        <div class="col-xs-10">
          <%= text_input f, :address, class: "form-control" %>
          <%= error_tag f, :address %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= label f, :phone, class: "control-label" %>
        <%= text_input f, :phone, class: "form-control" %>
        <%= error_tag f, :phone %>
      </div>
    </div>
  </div>
  <div class="row">
    <%= inputs_for f, :items, fn p -> %>
      <div class="row">
      <div class="col-md-2">
        <div class="form-group">
          <%= label p, "Model No", class: "control-label capitalize" %>
          <%= text_input p, :model_id, class: "form-control" %>
          <%= error_tag p, :model_id %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
          <%= label p, :description, class: "control-label capitalize" %>
          <%= text_input p, :description, class: "form-control" %>
          <%= error_tag p, :description %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= label p, :unit_price, class: "control-label capitalize" %>
          <%= text_input p, :unit_price, class: "form-control" %>
          <%= error_tag p, :unit_price %>
        </div>
      </div>
      <div class="col-md-1">
        <div class="form-group">
          <%= label p, "Quantity", class: "control-label capitalize" %>
          <%= text_input p, :quantity_requested, class: "form-control" %>
          <%= error_tag p, :quantity_requested %>
        </div>
      </div>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
