<h2><%= @product.name %></h2>

<ul>

  <li>
    <strong>Model:</strong>
    <%= @product.model_id %>
  </li>

  <li>
    <strong>Quantity:</strong>
    <%= @product.quantity %>
  </li>

  <li>
    <strong>Unit price:</strong>
    RM <%= display_dollar_price(@product.unit_price_cents) %>
  </li>
</ul>

<span><%= link "Edit", to: product_path(@conn, :edit, @product) %></span>
<span><%= link "Back", to: product_path(@conn, :index) %></span>
